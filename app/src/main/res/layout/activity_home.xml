<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/colorBackground">
    <Spinner
        android:id="@+id/spnTopic"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:background="@drawable/round_area_blue"/>
    <LinearLayout
        android:id="@+id/lL_topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spnTopic"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lL_temp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorLight"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Temperature"
                android:layout_marginBottom="20dp"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/termo"
                android:contentDescription="Termometer"
                android:layout_marginBottom="18dp"/>
            <TextView
                android:id="@+id/txtV_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="36^"
                android:textColor="@color/colorLight"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:textSize="24sp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lL_humi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/colorLight"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Humidity"
                android:layout_marginBottom="20dp"/>
            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/drops"
                android:contentDescription="Humidity"
                android:layout_marginBottom="18dp"/>
            <TextView
                android:id="@+id/txtV_humi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="57%"
                android:textColor="@color/colorLight"
                android:fontFamily="@font/poppins_medium"
                android:textAlignment="center"
                android:textSize="24sp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:fontFamily="@font/poppins_medium"
        android:textSize="20sp"
        android:background="@color/colorLight"
        android:textColor="@color/colorTopicBorder"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>